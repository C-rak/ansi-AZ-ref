# Ansible Playbooks

- hosts: localhost
  tasks:
    - name: GET availabilitySets
      azure_rm_resource_facts:
        api_version: '2018-10-01'
        resource_group: 'sampleRG'
        provider: 'Compute'
        resource_type: 'availabilitySets'


- hosts: localhost
  tasks:
    - name: CREATE availabilitySets
      azure_rm_resource:
        api_version: '2018-10-01'
        resource_group: 'sampleRG'
        provider: 'Compute'
        resource_type: 'availabilitySets'
        resource_name: '{{ name }}'
        body:
          id: (String)
          name: (String)
          type: (String)
          location: (String)
          tags:
          properties:
            platformUpdateDomainCount: (Integer)
            platformFaultDomainCount: (Integer)
            virtualMachines:
              - id: (String)
            statuses:
              - code: (String)
                level: (String)
                displayStatus: (String)
                message: (String)
                time: (String)
          sku:
            name: (String)
            tier: (String)
            capacity: (Integer)


